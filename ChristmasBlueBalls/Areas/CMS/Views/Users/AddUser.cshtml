
@{
    ViewBag.Title = "AddUser";
    Layout = "~/Areas/CMS/Views/Shared/_CMSLayout.cshtml";
}


<div class="row">
    <form class="col-md-10 offset-md-1" action="/CMS/Home/AddUser" method="post" enctype="multipart/form-data">
        <input type="text" name="Firstname" placeholder="Input firstname"/>
        <input type="text" name="Lastname" placeholder="Input lastname"/>
        <br />
        <br />
        <input type="text" name="Username" placeholder="Input username" />
        <input type="text" name="Email" placeholder="Input Email"/>
        <br />
        <br />
        <input type="password" name="Password" placeholder="Input password" />
        <input type="password" name="verifyPass" placeholder="Repeat password" />
        <select name="Role">
            <option value="1">Customer</option>
            <option value="2">Personel</option>
            <option value="3">Boss</option>
            <option value="4">Administrator</option>
        </select>
        <input type="submit" value="Create user" />
    </form>
</div>