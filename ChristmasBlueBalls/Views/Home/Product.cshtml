
@using Repo.Models;
@model Products
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="row">
    <header class="col-md-12">
        <h2 class="text-center">
            @Model.Name
        </h2>
    </header>
</div>

<article class="row">
    <section class="col-md-12">
        <div class="row">
            <div class="col-md-4">
                <img src="~/images/Products/@Model.Image" alt="@Model.Name" class="img-fluid" />
            </div>
            <div class="col-md-5 offset-md-1">
                @*<h4>@Model.Price</h4>*@
                <button class="btn btn-primary">Buy now £@Model.Price</button>
                <p>@Html.Raw(Model.Description)</p>
            </div>
        </div>
    </section>
</article>

